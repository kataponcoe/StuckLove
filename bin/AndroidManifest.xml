            android:name="com.dreamcode.stucklove.SplashActivity"
            android:label="@string/twicename"
            android:icon="@drawable/stucklovefinal" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
