        </activity>
        <activity
            android:name="com.dreamcode.stucklove.MainActivity"
            android:label="@string/app_name"
            android:icon="@drawable/stucklovefix" >
            <intent-filter>
                <action android:name="com.dreamcode.CLEARSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".StuckLoveOld"
                  android:label="@string/iNeedYou"
                  android:icon="@drawable/ikonineedbiasa">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
